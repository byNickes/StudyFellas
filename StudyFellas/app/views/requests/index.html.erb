<title>StudyFellas - Richieste</title>
<br>
<h1 class="header_pagina">Richieste per il gruppo</h1>

<div class="container-fluid" id ="exams_container">
    <div class="row">
        <% @requests.each do |request| %>
            <%= user = Group.find(request.user_id)%>
            <div class="col-auto" style="margin-top:20px;">
                <div class="col" id="exam_col">
                    <br>
                    <span id = "error_style">Nome:</span> <%=user.nome%>
                    <br>
                    <span id = "error_style">Email:</span> <%=user.email%>
                    <br><br>
                    <%=button_to "Accetta", accept_request_path, :method => :delete, params:{:request_id => request.id}, :class => "btn btn-primary", :id => "button", :style => "width:200px"%>
                    <%=button_to "Elimina", refuse_request_path, :method => :delete, params:{:request_id => request.id}, :class => "btn btn-primary", :id => "button", :style => "width:200px"%>
                </div>
            </div>
        <%end%>
    </div>
</div>

