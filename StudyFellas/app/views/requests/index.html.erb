<title>StudyFellas - Richieste</title>
<br>
<h1 class="header_pagina">Richieste per il gruppo</h1>

<div class="container-fluid" id ="exams_container">
    <div class="row">
        <% @requests.each do |request| %>
            <%user = User.find(request.user_id)%>
            <div class="col-auto" style="margin-top:20px;">
                <div class="col" id="exam_col">
                    <br>
                    <span id = "error_style"><%=user.profile.name%> <%=user.profile.surname%> </span>
                    <br><br>
                    <%=button_to "Visita il profilo", profile_path, :params =>{:profile_id => user.profile.id}, :method => :get, :class => "btn btn-primary", :id => "button", :style => "width:fit-content;"%>
                    <br><br>
                    <div class="container" id="footprint_buttons">
                        <%=button_to "Accetta", accept_request_path, :method => :delete, params:{:request_id => request.id}, :class => "btn btn-primary", :id => "button", :style => "width:200px"%>
                    </div>
                    <%=button_to "Elimina", refuse_request_path, :method => :delete, params:{:request_id => request.id, :group_id => @currentgroup.id}, :class => "btn btn-primary", :id => "button", :style => "width:200px"%>
                </div>
                <br>
            </div>
        <%end%>
    </div>
</div>

<br>
<!--FOOTPRINT BUTTONS SCHEMA TO GET THIS VIEW'S RESULT-->
<%=button_to "Torna al gruppo", group_path(@currentgroup.id),:method => :get, :class => "btn btn-primary", :id => "button", :style => "width:fit-content;"%>
